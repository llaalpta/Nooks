{
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "jsx": "react-native",
    "moduleSuffixes": [".ios", ".android", ".web", ""],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "*": ["*", "*.ios", "*.android", "*.web"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/*.d.ts",
    "nativewind-env.d.ts",
    "src/theme/colors.ts"
  ],
  "exclude": ["node_modules"]
}
